<div class="card float-left m-3 order-item-card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to oitem.item.name, item_path(oitem.item) %></h5>

    <p><%= oitem.item.description %></p>
    <img id="item-<%= oitem.item.id %>-image" alt="image for <%= oitem.item.name %>" src="<%= oitem.item.image %>" width="<%= img_width %>" />
    <p>Merchant: <%= oitem.item.user.name %></p>
    <p>Price: <%= number_to_currency(oitem.price) %></p>
    <p>Quantity: <%= oitem.quantity %></p>
    <p>Subtotal: <%= number_to_currency(oitem.subtotal) %></p>
    <p>Fulfilled: <%= oitem.fulfilled ? 'Yes' : 'No' %></p>
    <% if oitem.fulfilled == true && order.completed? && oitem.review == nil %>
      <%= link_to "Review This Item", new_review_path(order_item: oitem), method: :get %>
    <% elsif oitem.review %>
      <h5>Your Review: <%= oitem.review.title %></h5>
      <p>Description: <%= oitem.review.description %></p>
      <p>Your Rating: <%= oitem.review.rating %></p>
      <p>Updated On: <%= oitem.review.updated_at.to_date.to_s %></p>
      <%= button_to "Edit This Review", review_path(review: {id: oitem.review.id}, id: oitem.review.id, order_item: oitem), method: :patch %>
      <%= button_to "Delete This Review", review_path(id: oitem.review.id, review: {id: oitem.review.id}), data: {confirm: "Are you sure you want to delete this review?"}, method: :delete %>
    <% end %>
  </div>
</div>
