<h1>User Order Index</h1>

<% if @orders.empty? %>
  <p>You have no orders yet</p>
<% else %>
  <% @orders.each do |order| %>
    <%= tag.div class: "card float-left m-3 order-card" do %>
      <%= tag.div class: "card-body" do %>
        <%= tag.section id: "order-#{order.id}" do %>
          <p><%= link_to "Order ID #{order.id}", profile_order_path(order) %></p>
          <p>Created: <%= order.created_at.to_date.to_s %></p>
          <p>Last Update: <%= order.updated_at.to_date.to_s %></p>
          <p>Status: <%= order.status %></p>
          <p>Item Count: <%= order.total_item_count %></p>
          <p>Total Cost: <%= number_to_currency(order.total_cost) %></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
