<h1>Items Catalog</h1>

<%= tag.div class: "card" do %>
  <%= tag.section id: "statistics", class: "card-body float-left m-4" do %>
    <%= tag.section id: "popular-items", class: "card-body float-left m-2" do %>
      <h4>Popular Items</h4>
      <ol>
      <% @popular_items.each do |item| %>
      <li><%= item.name %>, total ordered: <%= item.total_ordered %></li>
      <% end %>
      </ol>
    <% end %>
    <%= tag.section id: "unpopular-items", class: "card-body float-left m-2" do %>
      <h4>Least Popular Items</h4>
      <ol>
      <% @unpopular_items.each do |item| %>
      <li><%= item.name %>, total ordered: <%= item.total_ordered %></li>
      <% end %>
      </ol>
    <% end %>
  <% end %>
<% end %>

<% @items.each do |item| %>
  <%= tag.section id: "item-#{item.id}" do %>
  <%= render partial: "card", locals: {item: item, img_width: 200}%>
  <% end %>
<% end %>
