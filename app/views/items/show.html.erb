<%= render partial: "card", locals: {item: @item, img_width: 300}%>

<%= tag.div class: "card float-center m-3 card" do %>
  <h2>Item Reviews<h2>
    <% @item.reviews.each do |review| %>
      <%= tag.section class: "review-body review-#{review.id}" do %>
        <%= tag.h5 class: "review-title" do %>
          <%= review.title %>
        <% end %>
        <strong>Author: </strong><%= review.user.name %><br/>
        <strong>Description: </strong><%= review.description %><br/>
        <strong>Rating: </strong><%= review.rating %><br/>
        <strong>Review Date: </strong><%= review.created_at.to_date.to_s %><br/>
        <% unless review.created_at == review.updated_at %>
          <strong>Updated On: </strong><%= review.created_at.to_date.to_s %><br/>
        <% end %></p>
      <% end %>
    <% end %>

<% end %>
