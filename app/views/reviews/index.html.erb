<h1>My Reviews</h1>

<% unless @reviews.nil? %>
  <% @reviews.each do |review| %>
    <section class="review-block" id="review-<%=review.id%>">
      <h5>Title: <%= review.title %></h5>
      <p>Item: <%= link_to "#{review.item.name}", item_path(review.item) %></p>
      <p>Ordered On: <%= review.order.created_at.to_date.to_s %>
      <p>Description: <%= review.description %></p>
      <p>Your Rating: <%= review.rating %></p>
      <p>Updated On: <%= review.updated_at.to_date.to_s %></p>
      <%= button_to "Edit This Review", edit_review_path(review), method: :get %>
      <%= button_to "Delete This Review", review_path(review), data: {confirm: "Are you sure you want to delete this review?"}, method: :delete %>
    </section>
  <% end %>
<% end %>
