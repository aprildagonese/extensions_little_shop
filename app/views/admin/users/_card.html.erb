<%= tag.div class: "card float-left m-3 user-card" do %>
  <%= tag.section class: "card-body" do %>
    <%= tag.h5 class: "card-title" do %>
      <%= link_to user.name, admin_user_path(user) %>
    <% end %>
    <p>Registration Date:<br/>
      <em><%= user.created_at.to_date.to_s %></em>
    </p>
    <p>
      <% if user.active %>
      <%= button_to 'Disable', admin_disable_user_path(user), method: :put %>
      <% else %>
      <%= button_to 'Enable', admin_enable_user_path(user), method: :put %>
      <% end %>
    </p>
    <p>
      <%= button_to 'Upgrade to Merchant', admin_upgrade_user_path(user), method: :put %>
      <%= button_to 'Edit User Profile', edit_admin_user_path(user), method: :get %>
    </p>
  <% end %>
<% end %>
